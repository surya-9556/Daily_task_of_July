@model IEnumerable<InventoryProduct.Models.Customer>
@{
    ViewBag.Title = "ViewCustomer";
}

<h2>View Customers</h2>

<p class="btn btn-success" style="margin-bottom:10px">
    @Html.ActionLink("ADD", "AddACustomer")
</p>

@using (Html.BeginForm("ViewCustomer", "Customers", FormMethod.Get))
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.ContactNo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(ModelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(ModelItem => item.ContactNo)
                    </td>
                    <td>
                        <i class="fa fa-pencile"></i>
                        @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerId }) |
                        <i class="fa fa-info"></i>
                        @Html.ActionLink("Details", "DetailsCustomer", new { id = item.CustomerId }) |
                        <i class="fa fa-trash"></i>
                        @Html.ActionLink("Remove", "DeleteCustomer", new { id = item.CustomerId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}